@model Mensagem
@using PI_SITE.Models

@{
    ViewData["Title"] = "Contato";
}

<section class="Contato">	
 
  <div class="banner-topo"><img src="~/images/banner-contato.jpg" width="100%"></div>

  <div class="telacontato" id="contato">
    <p class="titulo2 vermelho">Contato</p>
      <h1>Deseja nos enviar um e-mail?<br>Utilize o formulário abaixo:</h1>
      
        <form method="POST" asp-action="Contato"> 
        
          <label asp-for="Nome">Nome Completo</label>
          <input type="text" asp-for="Nome" id="Nome" placeholder="Nome Completo" required />

          <label asp-for="Email">E-mail</label>
          <input type="Email" asp-for="Email" id="Email" placeholder="Seu E-mail Aqui" required />

          <label asp-for="Assunto">Assunto</label>
          <input type="text" asp-for="Assunto" id="Assunto" placeholder="Exemplo *Sugestão* " required />

          <label asp-for="Message">Mensagem</label>
          <textarea asp-for="Message" id="Message" placeholder="Olá, tudo bem....." required></textarea>

          <div class="btn_cadastrar"><p><input class="btn btn-danger" type="submit" value="Enviar" /></p></div>
          
        </form>
        <p><br>&nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp<br></p>
  </div>
</section>	
